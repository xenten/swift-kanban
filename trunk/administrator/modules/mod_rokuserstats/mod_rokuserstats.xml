<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" method="upgrade" client="administrator">
	<name>RokUserStats</name>
	<creationDate>April 10, 2012</creationDate>
	<author>RocketTheme, LLC</author>
	<authorEmail>support@rockettheme.com</authorEmail>
	<authorUrl>http://www.rockettheme.com</authorUrl>
	<copyright>(C) 2005 - 2012 RocketTheme, LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>2.6</version>
	<description>MC_RUS_ROKUSERSTATS_DESC</description>
	<files>
		<filename module="mod_rokuserstats">mod_rokuserstats.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
        <folder>fields/</folder>
		<folder>tmpl/</folder>
		<folder>language/</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/modules/mod_rokuserstats/fields">
				<field name="showstats" type="radio" default="1" label="Show Stats Information" description="Show's UserStats and AdminAudit stats">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="statsclean" type="statsclean" label="Stats Clean" />
			</fieldset>
		</fields>
	</config>
</extension>
